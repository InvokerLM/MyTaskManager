
@{
    ViewBag.Title = "节点列表";
    Layout = "~/Views/_MainLayoutPage.cshtml";
}
@section headscript{
<link href="~/content/css/bootstrap-table.min.css" rel="stylesheet" />
}

<div class="row">
    <div class="col-sm-12">
        <div class="ibox">
            <div class="ibox-title">
                <h4>节点管理 <small>所有连接到HostServer的节点</small></h4>
            </div>
            <div class="ibox-content">
                <table id="nodelistTable" data-toggle="table"
                       data-url="/servercenter/getnodelist"
                       data-search="true"
                       data-show-refresh="true">
                    <thead>
                        <tr>
                            <th data-field="index">#</th>
                            <th data-field="node">节点</th>
                            <th data-field="action" data-formatter="actionFormatter">操作</th>
                        </tr>
                    </thead>
                </table>

            </div>
        </div>
    </div>
</div>

@section footscript{
    <script src="~/content/js/bootstrap-table.min.js"></script>
    <script src="~/content/js/bootstrap-table-zh-cn.min.js"></script>
    <script>
        function actionFormatter(value, row, index) {
            return [
                '<button type="button" class="btn btn-warning btn-sm">查看日志</button>'
            ].join('');
        }
    </script>
}